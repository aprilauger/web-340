<!-- Header -->
<% include header %>

<!-- Container -->
<div role="main" class="container">
	<h1><%= title %></h1>
	<p><%= message %></p>

	<form id="new-employee" method="post" action="/new">
		<fieldset class="form-group">
			<legend>Personal Information</legend>
			<div class="form-group">
				<label for="firstName">First Name</label>
				<input id="firstName" name="firstName" type="text" required>
			</div>
			<div class="form-group">
				<label for="lastName">Last Name</label>
				<input id="lastName" name="lastName" type="text" required>
			</div>
			<div class="form-group">
				<label for="birth">Date of Birth</label>
				<input id="birth" name="birth" type="date" required>
			</div>
		</fieldset>

		<fieldset class="form-group">
			<legend>Address & Phone</legend>
			<div class="form-group">
				<label for="address">Address Line</label>
				<input id="address" name="address" type="text" required>
			</div>

			<div class="form-group">
				<label for="city">City</label>
				<input id="city" name="city" type="text" required>
			</div>

			<div class="form-group">
				<label for="state">State</label>
				<input id="state" name="state" type="text" required>
			</div>

			<div class="form-group">
				<label for="zip">Zip</label>
				<input id="zip" name="zip" type="text" required>
			</div>

			<div class="form-group">
				<label for="phone">Phone</label>
				<input id="phone" name="phone" type="text" required>
			</div>
		</fieldset>

		<fieldset class="form-group">
			<legend>Department</legend>
			<div class="form-group">
				<label for="department">Department</label>
				<input id="department" name="department" type="text" required>
			</div>
			<div class="form-group">
				<label for="position">Position</label>
				<input id="position" name="position" type="text" required>
			</div>
			<div class="form-group">
				<label for="hireDate">Hire Data</label>
				<input id="hireDate" name="hireDate" type="date" required>
			</div>
		</fieldset>

		<button type="submit" class="btn btn-primary">Save</button>
	</form>
</div>

<!-- Footer -->
<% include footer %>